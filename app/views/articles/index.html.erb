<h1>Articles listing page</h1>
<table>
  <head>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </head>
  <tbody>
    <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.description %></td>
      <td><%= button_to 'Delete', article_path(article), method: :delete %></td>
    </tr>
    <% end %>
  </tbody>
</table>
